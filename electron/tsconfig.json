{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist-electron",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["./main.ts"],
  "exclude": ["../node_modules"]
}
